<Page
    x:Class="DigitalContactsNotebook.Views.MainWindowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DigitalContactsNotebook.Views"
    xmlns:universalcontrollibrary="clr-namespace:UniversalControlLibrary;assembly=UniversalControlLibrary"
    mc:Ignorable="d"
    d:DesignWidth="250" d:DesignHeight="150"
>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
        <universalcontrollibrary:FocusableButton x:Name="ObserveContactsButton" IsButtonGrows="False" Content="Просмотр контактов" Cursor="Hand" Height="50" Margin="0,0,0,10" Style="{StaticResource CurvedButtonStyle}" Click="ObserveContactsButton_Click"/>
        <universalcontrollibrary:FocusableButton x:Name="AddContactButton" IsButtonGrows="False" Content="Добавить контакт" Cursor="Hand" Height="50" Style="{StaticResource CurvedButtonStyle}" Click="AddContactButton_Click"/>
    </StackPanel>

</Page>