<Page
    x:Class="DigitalContactsNotebook.Pages.MainWindowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DigitalContactsNotebook.Pages"
    xmlns:universalcontrollibrary="clr-namespace:UniversalControlLibrary;assembly=UniversalControlLibrary"
    mc:Ignorable="d"
    d:DesignWidth="125" d:DesignHeight="75"
    Title="MainWindowPage"
>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <universalcontrollibrary:FocusableButton x:Name="ObserveContactsButton" Content="Просмотр контактов" Height="25" Margin="0,0,0,10" Style="{StaticResource CurvedButtonStyle}" Click="ObserveContactsButton_Click"/>
            <universalcontrollibrary:FocusableButton x:Name="AddContactButton" Content="Добавить контакт" Height="25" Style="{StaticResource CurvedButtonStyle}" Click="AddContactButton_Click"/>
        </StackPanel>
    </Grid>

</Page>